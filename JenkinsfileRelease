node {

    load "$JENKINS_HOME/jobvars.env"

	stage('Build') {
		docker.image('node:10').inside('-u root') {
			
		}
	}
		
	stage('Install') { 
		sh 'npm install' 
	}
		
	stage ('Build Server') {
	
		 withEnv(["TOKEN=${NPMJS_TOKEN}"]) {
			
			sh 'echo 1111 = ${TOKEN}'
			sh 'echo "//registry.npmjs.org/:_authToken=${TOKEN}" >> ~/.npmrc'
			sh 'npm publish' 
		}
	}
}